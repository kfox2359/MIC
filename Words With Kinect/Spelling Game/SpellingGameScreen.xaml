<UserControl x:Class="Words_With_Kinect.Spelling_Game.SpellingGameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Background>
        <ImageBrush ImageSource="/Words With Kinect;component/Resources/Blackboard.jpg"/>
    </UserControl.Background>
    <Grid>
        <k:KinectRegion x:Name="kinectRegion" Margin="0,0,0,0">
            <Grid>
                <Label x:Name="Letter" Content="" HorizontalAlignment="Left" Margin="500,364,0,0" VerticalAlignment="Top" Foreground="#FFD62525" FontSize="48"/>
                <Label x:Name="confidence" Content="" HorizontalAlignment="Left" Margin="500,562,0,0" VerticalAlignment="Top" Foreground="#FFD62525" FontSize="48"/>

            </Grid>
        </k:KinectRegion>
    </Grid>
</UserControl>
