<Window x:Class="Words_With_Kinect.StartupOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Options" HorizontalAlignment ="Center"   Height="287" Width="326"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Near Mode" HorizontalAlignment="Left" Margin="36,31,0,0" VerticalAlignment="Top" FontSize="48" Grid.ColumnSpan="2"/>
        <RadioButton x:Name="RadioBtnEnable" Content="Enable" HorizontalAlignment="Left" Margin="45,119,0,0" VerticalAlignment="Top" IsChecked="True" Grid.Column="1" FontSize="18"/>
        <RadioButton x:Name="RadioBtnDisable" Content="Disable" HorizontalAlignment="Left" Margin="45,155,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="18"/>
        <Button Content="Start Kinect" HorizontalAlignment="Left" Margin="22,194,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click" Grid.Column="1" Height="36"/>

    </Grid>
</Window>
